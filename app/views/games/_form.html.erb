<%= render "layouts/errors", :object => @game %>

<%= form_for [@genre, @game] do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>
    <%= f.text_field :rating, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
