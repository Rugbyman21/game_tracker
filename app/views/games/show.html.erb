  <h1><%= "#{@game.title.split(" ").map(&:capitalize).join(" ")}" %> - <em><%= @genre.name %><p><h4>Rating: <%= @game.rating %></h4></p></h1>
  <%= image_tag @game.image.url(:medium).to_s %>

